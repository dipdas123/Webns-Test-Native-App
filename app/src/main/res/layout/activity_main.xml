<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/btn_get_last_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="Get last known location"/>

    <Button
        android:id="@+id/sendLastKnownLocationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send last known location"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_location_info_last_known"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>







    <Button
        android:id="@+id/btn_get_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get current location"
        android:layout_marginTop="@dimen/_30sdp"/>

    <Button
        android:id="@+id/sendCurrentLocationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send current location"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_location_info_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="8dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="Start"/>

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="Stop"/>

    </LinearLayout>
</LinearLayout>
